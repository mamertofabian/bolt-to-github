{
  "name": "bolt-to-github",
  "version": "1.3.12",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "watch": "vite build --watch",
    "watch:dev": "vite build --mode development --watch",
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*.{js,ts,svelte}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,svelte}\" --fix",
    "lint-check": "pnpm run lint && pnpm run check",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "test:failed-files": "node scripts/find-failed-tests.js",
    "clean:test-comments": "npx tsx scripts/remove-test-comments.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,svelte,css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.2.6",
    "fflate": "^0.8.2",
    "ignore": "^6.0.2",
    "lucide-svelte": "^0.460.1",
    "marked": "^15.0.12"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.32",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@testing-library/svelte": "^4.2.3",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.236",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^0.21.16",
    "clsx": "^2.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-svelte": "^2.46.1",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "svelte-preprocess": "^5.1.4",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^4.5.13",
    "vitest": "^1.6.1"
  }
}
