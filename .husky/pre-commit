# Configuration flags (can be overridden via environment variables)
: ${RUN_LINT:=TRUE}
: ${RUN_CHECK:=TRUE}
: ${SKIP_TESTS:=FALSE}
: ${UPDATED_TESTS_ONLY:=TRUE}

echo "ğŸ” Running pre-commit checks..."

# 1. Format files with lint-staged (only staged files)
echo "ğŸ“ Formatting staged files..."
pnpm lint-staged

# 2. Run ESLint on all source files (can skip with RUN_LINT=FALSE)
if [ "$RUN_LINT" != "FALSE" ]; then
  echo "ğŸ”§ Running ESLint..."
  pnpm lint
  if [ $? -ne 0 ]; then
    echo "âŒ ESLint failed. Please fix linting errors before committing."
    echo "ğŸ’¡ Run 'pnpm lint:fix' to auto-fix some issues."
    echo "ğŸ’¡ To skip linting, use: RUN_LINT=FALSE git commit"
    exit 1
  fi
else
  echo "â­ï¸  Skipping ESLint (RUN_LINT=FALSE)"
fi

# 3. Run TypeScript type checking (can skip with RUN_CHECK=FALSE)
if [ "$RUN_CHECK" != "FALSE" ]; then
  echo "ğŸ” Running TypeScript type checking..."
  pnpm check
  if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type checking failed. Please fix type errors before committing."
    echo "ğŸ’¡ To skip type checking, use: RUN_CHECK=FALSE git commit"
    exit 1
  fi
else
  echo "â­ï¸  Skipping TypeScript type checking (RUN_CHECK=FALSE)"
fi

# 4. Run tests to ensure nothing is broken (can skip with SKIP_TESTS=TRUE)
if [ "$SKIP_TESTS" != "TRUE" ]; then
  # Option to run only changed/updated tests (default behavior)
  if [ "$UPDATED_TESTS_ONLY" != "FALSE" ]; then
    echo "ğŸ§ª Running tests on changed files only..."
    pnpm test --changed
    if [ $? -ne 0 ]; then
      echo "âŒ Tests on changed files failed. Please fix failing tests before committing."
      echo "ğŸ’¡ To run full test suite, use: UPDATED_TESTS_ONLY=FALSE git commit"
      echo "ğŸ’¡ To skip tests temporarily, use: SKIP_TESTS=TRUE git commit"
      exit 1
    fi
  else
    echo "ğŸ§ª Running full test suite..."
    pnpm test
    if [ $? -ne 0 ]; then
      echo "âŒ Tests failed. Please fix failing tests before committing."
      echo "ğŸ’¡ To skip tests temporarily during development, use: SKIP_TESTS=TRUE git commit"
      echo "ğŸ’¡ To run only changed tests, use: UPDATED_TESTS_ONLY=TRUE git commit"
      exit 1
    fi
  fi
else
  echo "â­ï¸  Skipping tests (SKIP_TESTS=TRUE)"
fi

echo "âœ… All pre-commit checks passed!"
