#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# 1. Format files with lint-staged (only staged files)
echo "ğŸ“ Formatting staged files..."
pnpm lint-staged

# 2. Run ESLint on all source files
echo "ğŸ”§ Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix linting errors before committing."
  echo "ğŸ’¡ Run 'pnpm lint:fix' to auto-fix some issues."
  exit 1
fi

# 3. Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
pnpm check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix type errors before committing."
  exit 1
fi

# 4. Run tests to ensure nothing is broken
# echo "ğŸ§ª Running tests..."
# pnpm test
# if [ $? -ne 0 ]; then
#   echo "âŒ Tests failed. Please fix failing tests before committing."
#   exit 1
# fi

